<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/linearLayout"
        android:layout_width="356dp"
        android:layout_height="59dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="52dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/Generador"
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:layout_marginStart="36dp"
            android:text="GENERADOR DE NUMERO"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/numAleatorio"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/numAleatorio"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/Generador"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/Generador"
            app:layout_constraintTop_toTopOf="@+id/Generador" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="255dp"
        android:layout_height="244dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="183dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <CheckBox
            android:id="@+id/div2"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:text="Es divisible por 2" />

        <CheckBox
            android:id="@+id/div3"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:text="Es divisible por 3" />

        <CheckBox
            android:id="@+id/div5"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:text="Es divisible por 5" />

        <CheckBox
            android:id="@+id/div10"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:text="Es divisible por 10" />

        <CheckBox
            android:id="@+id/divNo"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:text="No es divisible por ninguno" />

    </LinearLayout>

    <Button
        android:id="@+id/comprobar"
        android:layout_width="0dp"
        android:layout_height="65dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="454dp"
        android:text="COMPROBAR RESULTADO"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/result"
        android:layout_width="180dp"
        android:layout_height="64dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="540dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="274dp"
        android:layout_height="30dp"
        android:layout_marginStart="61dp"
        android:layout_marginTop="136dp"
        android:text="¿Entre qué números es divisible?"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ok"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="249dp"
        android:layout_marginTop="523dp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ok" />

    <ImageView
        android:id="@+id/ko"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="249dp"
        android:layout_marginTop="523dp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ko" />

    <ImageView
        android:id="@+id/inter"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="248dp"
        android:layout_marginTop="540dp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/interrogacion" />

</androidx.constraintlayout.widget.ConstraintLayout>